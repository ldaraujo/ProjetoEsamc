<!-- Start body -->

<body>

    <br>
    <div id="cadastrar">
        <a href="/estudante/cadastrar"><button type="button" class="btn btn-primary btn-lg">Novo Cadastro</button></a>
    </div>
    <br>

    <h1 id="titulo">Lista de Alunos</h1>

    <!-- Start table -->
    <table class="table">
        <thead class="thead-dark">

            <tr id="colunas">
                <th scope="col">Nome</th>
                <th scope="col">RA</th>
                <th scope="col">Curso</th>
                <th scope="col">Nacionalidade</th>
                <th scope="col">UF</th>
                <th scope="col">CPF</th>
                <th scope="col">Data de Nascimento</th>
                <th scope="col">Sexo</th>
                <th scope="col">E-mail</th>
                <th scope="col"></th>
                <th scope="col"></th>

            </tr>

        </thead>
        <tbody>
            <% cadastro.forEach(function(item){ %>
            <tr id="colunas">
                <th scope="row"><%= item.nome %></th>
                <th scope="row"><%= item.id %></th>
                <th scope="row"><%= item.curso %></th>
                <th scope="row"><%= item.nacionalidade %></th>
                <th scope="row"><%= item.uf %></th>
                <th scope="row"><%= item.cpf %></th>
                <th scope="row" id="dt"><%= item.dt_nasc %></th>
                <th scope="row"><%= item.sexo %></th>
                <th scope="row"><%= item.email %></th>
                <th scope="row">
                    <a href="/atualizarCadastro?id=<%= item.id %>">
                        <img id="image" src="images/update1.png" alt="atualizar">
                    </a>

                </th>
                <th scope="row">
                    <a href="/excluirCadastro?id=<%= item.id %>" onClick="return confirm('Confirma a exclusÃ£o?')">
                        <img id="image" src="images/trash.svg" alt="deletar">
                    </a>
                </th>

            </tr>



            <% }) %>
        </tbody>
    </table>

    <!-- Footer -->
    <footer id="footer" class="footer-turma">

        <div class="copyright">
            &copy; Projeto Faculdade ESAMC Santos
        </div>
    </footer>

</body>



